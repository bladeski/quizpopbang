---
import SimpleQuestion from '../components/simple-question/SimpleQuestion.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://use.typekit.net/qdb8nqo.css">
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<footer>powered by QuizPopBang!</footer>

		<!-- Templates -->
		<SimpleQuestion />
	</body>
</html>
